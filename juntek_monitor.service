[Unit]
Description=Juntek Battery Monitor MQTT proxy for Home Assistant
After=multi-user.target

[Service]
Type=simple
WorkingDirectory=/home/pi/juntek_monitor
ExecStart=/home/pi/juntek_monitor/venv/bin/python3 /home/pi/juntek_monitor/main.py -i10
Restart=on-failure
SyslogIdentifier=juntek_monitor

[Install]
WantedBy=multi-user.target
